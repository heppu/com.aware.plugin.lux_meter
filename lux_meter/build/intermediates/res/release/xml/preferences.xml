<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="status_plugin_lux_meter"
        android:persistent="true"
        android:summary="Detects amount of light."
        android:title="Active" />

    <CheckBoxPreference
        android:key="mode_plugin_lux_meter"
        android:persistent="true"
        android:summaryOff="Off"
        android:summaryOn="On (measures when stream is open)"
        android:title="Real Time" />

    <EditTextPreference
        android:defaultValue="5"
        android:key="frequency_plugin_lux_meter"
        android:persistent="true"
        android:summary="5 minutes"
        android:title="How frequently to calculate average light (in minutes)"
        android:inputType="number" />

    <EditTextPreference
        android:defaultValue="30"
        android:key="samples_plugin_lux_meter"
        android:persistent="true"
        android:summary="30"
        android:title="How many samples to take at once"
        android:inputType="number" />

    <EditTextPreference
        android:defaultValue="100"
        android:key="threshold_plugin_lux_meter"
        android:persistent="true"
        android:summary="100 lux"
        android:title="Threshold for light (in lux)"
        android:inputType="number" />

